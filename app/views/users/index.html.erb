      <nav class="bg-main navbar navbar-expand-lg navbar-light fixed-top fixed-left">
        <div class="header-left">
          <a class="navbar-brand text-dark" href="/teams">todo</a>

        <%# 検索メニューの設置 %>
          <form class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
