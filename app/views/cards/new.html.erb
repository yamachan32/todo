<%# modal化したい %>

    <div style="padding-top:4rem">
        <%= form_with model: @card, url: cards_path, method: :post, id: "form" , local: true do |form| %>

          <div class="modal-header">
            <h5 class="modal-title">タスクカード作成</h5>
            <button type="button" class="close js-modal-close">
              <%# <span aria-hidden="true">&times;</span> %>
            </button>
          </div>
          
          <div class="modal-body">

            <div class="form-group-sm field">
              <div class="d-flex align-items-end">タイトル</div>
              <%= form.text_field :title, class: "form-control" %>
            </div>
            
            <div class="form-group-sm field">
              <div class="d-flex align-items-end">説明</div>
              <%= form.text_area :explanation, class: "form-control" %>
            </div>

            <div class="form-group-sm field">
              <div class="d-flex align-items-end">作業時間</div>
              <%= form.select :working_hours, [["30分", "0.5"], ["60分", "1"],["90分", "1.5"], ["120分", "2"]],{include_blank: "選択して下さい"},{class: 'form-control'}%>
            </div>

            <div class="d-flex justify-content-around">
              <div class="form-group-sm field">
              <div class="d-flex align-items-end">期限</div>
                <div class='input-birth-wrap'>
                  <%= raw sprintf(
                              form.date_select(
                                :limit_date,
                                class:'select-birth',
                                id:"birth-date",
                                use_month_numbers: true,
                                selected: Date.today,
                                prompt:'--',
                                start_year: Time.now.year,
                                end_year: (Time.now.year + 1),
                                date_separator: '%s'),
                              "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
                </div>
              </div>

              <div class="form-group-sm field">
                <div class="d-flex align-items-end">作業予定日</div>
                <div class='input-birth-wrap'>
                  <%= raw sprintf(
                            form.date_select(
                              :working_date,
                              class:'select-birth',
                              id:"birth-date",
                              use_month_numbers: true,
                              selected: Date.today,
                              prompt:'--',
                              start_year: Time.now.year,
                              end_year: (Time.now.year + 1),
                              date_separator: '%s'),
                            "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
                </div>
              </div>
            </div>


            <div class="form-group-sm field">
                <div class="#">タスク</div>

                <div class="progress mb-2">
                  <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: 0%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                  <div id="items">
                    <%# collection %>
                   <label><input type="checkbox", class="task", value ="test">test</label><br>

                  </div>

                <%= form.text_field :content , class: "form-control", id: "new_task"%>

            <div class="modal-footer actions">
              <%= form.submit class: "btn btn-primary", id: "submit"%>
            </div>
          </div>
        <% end %>
    </div>

